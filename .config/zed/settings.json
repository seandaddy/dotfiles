// custom settings, run `zed: open default settings` from the
// command palette
{
  "jupyter": {
    "python": {
      "enabled": true,
      "default_kernel": "python3",
      "kernelselection": "auto"
    },
    "r": {
      "enabled": true,
      "default_kernel": "ark",
      "kernelselection": "ark"
    }
  },
  "agent": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4o"
    },
    "version": "2"
  },
  "terminal": { "font_family": "JetBrainsMono Nerd Font" },
  "vim_mode": true,
  "ui_font_family": "JetBrainsMono Nerd Font",
  "ui_font_size": 20,
  "buffer_font_size": 20,
  "theme": "Tokyo Night"
